<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity3"
    >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up Here"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="30dp"
        android:id="@+id/Sign_up_here_text"
        style="@style/TextAppearance.AppCompat.Headline"
        android:layout_margin="10dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:hint="Name"
        android:id="@+id/name_signup"
        android:background="@drawable/costuminput"
        android:padding="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="200dp"
        android:drawableStart="@drawable/ic_signup_name"
        android:drawablePadding="10dp"
        android:elevation="2000dp"


        />

    <EditText
        android:layout_marginTop="20dp"
        android:id="@+id/Email_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_signup"
        android:hint="Email"
        android:background="@drawable/costuminput"
        android:padding="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="200dp"
        android:drawableStart="@drawable/ic_email"
        android:drawablePadding="10dp"
        android:elevation="2000dp"

        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Email_signup"
        android:layout_marginTop="20dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:background="@drawable/costuminput"
        android:padding="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="200dp"
        android:drawableStart="@drawable/ic_password"
        android:drawablePadding="10dp"
        android:id="@+id/PASSWORD_SIGN_UP"
        android:elevation="2000dp"
        />

    <Button
        android:id="@+id/CREATE_YOUR_ACCOUNT_SIGN_UP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/red"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="560dp"
        android:layout_below="@id/PASSWORD_SIGN_UP"
        android:text="CREATE ACCOUNT"
        android:textStyle="bold"
        android:height="40dp"
        android:fontFamily="sans-serif"
        android:layout_marginTop="20dp"
        />
</RelativeLayout>

    </ScrollView>



