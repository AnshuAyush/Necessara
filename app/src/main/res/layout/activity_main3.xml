<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up Here"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:textSize="30dp"
        android:id="@+id/Sign_up_here_text"
        style="@style/TextAppearance.AppCompat.Headline"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:hint="Name"
        android:id="@+id/name_signup"
        android:background="@drawable/costuminput"
        android:padding="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:drawableStart="@drawable/ic_signup_name"
        android:drawablePadding="10dp"
        android:elevation="2000dp"

        />

    <EditText
        android:layout_marginTop="20dp"
        android:id="@+id/Email_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_signup"
        android:hint="Email"
        android:background="@drawable/costuminput"
        android:padding="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:drawableStart="@drawable/ic_email"
        android:drawablePadding="10dp"
        android:elevation="2000dp"

        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Email_signup"
        android:layout_marginTop="20dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:background="@drawable/costuminput"
        android:padding="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:drawableStart="@drawable/ic_password"
        android:drawablePadding="10dp"
        android:id="@+id/PASSWORD_SIGN_UP"
        android:elevation="2000dp"
        />

    <Button
        android:id="@+id/CREATE_YOUR_ACCOUNT_SIGN_UP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/red"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@id/PASSWORD_SIGN_UP"
        android:layout_marginTop="40dp"
        android:text="CREATE ACCOUNT"
        android:textStyle="bold"
        android:height="20dp"
        android:textSize="20dp"
        android:fontFamily="sans-serif"
        />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/boy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/CREATE_YOUR_ACCOUNT_SIGN_UP"
        android:layout_marginTop="40dp"
        app:lottie_rawRes="@raw/man"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>